<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_picking_inherit" model="ir.ui.view">
         <field name="name">Picking Inherit</field>
         <field name="model">stock.picking</field>
         <field name="inherit_id" ref="stock.view_picking_form"/>
         <field name="priority" eval="18"/>
         <field name="arch" type="xml">
         	<xpath expr="//field[@name='location_id']" position="a">
		        <filter string="Product Category" name="group_by_product_categg" context="{'group_by':'categ_id'}"/>
			</xpath>
         </field>
     </record>
	
</odoo> 