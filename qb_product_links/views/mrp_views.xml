<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="qb_mrp_links_product_view" model="ir.ui.view">
        <field name="name">qb.mrp.links.product.inherit</field>
        <field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object"
                    name="action_view_purchase"
                    class="oe_stat_button"  
                    icon="fa-credit-card"
                    attrs="{'invisible': [('purchase_count', '=', 0)]}">
                    <field name="purchase_count" widget="statinfo" string="Purchases"/>
                </button>
                <button type="object"
                    name="action_view_mrp"
                    class="oe_stat_button"
                    icon="fa-gears"
                    attrs="{'invisible': [('mrp_count', '=', 0)]}">
                    <field name="mrp_count" widget="statinfo" string="MOs"/>
                </button>
            </xpath>
		</field>
    </record>
</odoo>