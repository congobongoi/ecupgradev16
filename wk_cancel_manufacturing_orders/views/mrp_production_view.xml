<odoo>
    <data>
        <record id="mrp_production_form_inherit_view" model="ir.ui.view">
            <field name="name">mrp.production.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/header" position="inside">
                    <button name="action_reset" attrs="{'invisible': [('state', '!=', 'cancel')]}" string="Set To Draft" type="object" class="oe_highlight"/>
                    <button name="action_cancel" type="object" string="Cancel" attrs="{'invisible': ['|', ('id', '=', False), ('state', 'not in', ('done'))]}" class="oe_highlight" groups="wk_cancel_manufacturing_orders.group_cancel_manufacturing_order" context="{'force_cancel': True}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
